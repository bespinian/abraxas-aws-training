{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowCostExplorerInFrankfurt",
      "Effect": "Allow",
      "Action": [
        "ce:Get*",
        "ce:List*"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "aws:RequestedRegion": "eu-central-1"
        }
      }
    }
  ]
}